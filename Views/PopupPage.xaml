<?xml version="1.0" encoding="utf-8" ?>    
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
             x:Class="NailBar_App.Views.PopupPage"
                         InputTransparent="False"
                         BackgroundColor="Transparent"
                         IsCloseOnBackgroundClick="true"
             Title="PopupPage">
    <Frame Style="{StaticResource FrameEntry}" BackgroundColor="White">
        <Frame.Shadow>
            <Shadow Brush="Black"
                Offset="20,20"
                Radius="0"
                Opacity="0.8" />
        </Frame.Shadow>
        <VerticalStackLayout Padding="20" Background="transparent">
            
            <Label 
            Text="Welcome to .NET MAUI!"
                TextColor="Red"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Frame>
</mauiPopup:BasePopupPage>